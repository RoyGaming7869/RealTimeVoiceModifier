<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    tools:context=".LanguageActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/backicon"
            android:layout_width="30sp"
            android:layout_height="30sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/back"
                android:src="@drawable/back_icon" />

        </RelativeLayout>

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:fontFamily="@font/ntr"
            android:text="@string/languages"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/savecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20sp"
                android:paddingVertical="10sp"
                android:text="@string/save"
                android:textSize="14sp"
                android:background="@color/setting_yellow"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">
                <LinearLayout
                    android:id="@+id/arabiclinear"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle_yellow_stroke"
                    android:padding="10sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_marginTop="30sp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:src="@drawable/arabic_icon"/>

                        <ImageView
                            android:id="@+id/arabiccheck"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="center"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/baseline_radio_button_unchecked_24"
                            app:tint="@color/setting_yellow" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ntr"
                        android:text="@string/arabic"
                        android:textColor="@color/white"
                        android:textSize="22sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/englishlinear"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rectangle_yellow_stroke"
                    android:padding="10sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_marginTop="30sp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:src="@drawable/english_icon"/>

                        <ImageView
                            android:id="@+id/englishcheck"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="center"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/baseline_radio_button_unchecked_24"
                            app:tint="@color/setting_yellow" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/english"
                        android:textColor="@color/white"
                        android:fontFamily="@font/ntr"
                        android:textSize="22sp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp">
                <LinearLayout
                    android:id="@+id/hindilinear"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle_yellow_stroke"
                    android:padding="10sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_marginTop="30sp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:src="@drawable/hindi_icon"/>

                        <ImageView
                            android:id="@+id/hindicheck"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="center"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/baseline_radio_button_unchecked_24"
                            app:tint="@color/setting_yellow" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ntr"
                        android:text="@string/hindi"
                        android:textColor="@color/white"
                        android:textSize="22sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/portaguallinear"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rectangle_yellow_stroke"
                    android:padding="10sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_marginTop="30sp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:src="@drawable/portagaues_icon"/>

                        <ImageView
                            android:id="@+id/portaguescheck"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="center"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/baseline_radio_button_unchecked_24"
                            app:tint="@color/setting_yellow" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/portagaues"
                        android:textColor="@color/white"
                        android:fontFamily="@font/ntr"
                        android:textSize="22sp"/>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp">
                <LinearLayout
                    android:id="@+id/frenchlinear"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle_yellow_stroke"
                    android:padding="10sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_marginTop="30sp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:src="@drawable/french_icon"/>

                        <ImageView
                            android:id="@+id/frenchcheck"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="center"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/baseline_radio_button_unchecked_24"
                            app:tint="@color/setting_yellow" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/ntr"
                        android:text="@string/french"
                        android:textColor="@color/white"
                        android:textSize="22sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spanishlinear"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rectangle_yellow_stroke"
                    android:padding="10sp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_marginTop="30sp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:src="@drawable/spanish_icon"/>

                        <ImageView
                            android:id="@+id/spanishcheck"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="center"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/baseline_radio_button_unchecked_24"
                            app:tint="@color/setting_yellow" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/spanish"
                        android:textColor="@color/white"
                        android:fontFamily="@font/ntr"
                        android:textSize="22sp"/>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>